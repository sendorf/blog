<%= simple_form_for(@comment, :html => {:class => 'form-vertical' }) do |f| %>

	<%= f.input :user, 
  						:input_html => {:size => '75'}%>
  <br>
	<%= f.input :body, 
  						:input_html => {:cols => '74',
  														:rows => '4'}%>
  <%= f.input :post_id, :as => :hidden, :input_html => { :value => @post.id }%>
  <br>
	<%= f.button :submit, :class => 'btn btn-success' %>
<%end%>