<%= simple_form_for(@post, :html => {:class => 'form-vertical' }) do |f| %>

	<%= f.input :title, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1',
  														:size => '75'}%>
  <br>
	<%= f.input :body, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1',
  														:cols => '74',
  														:rows => '4'}%>
  <br>
	<%= f.button :submit, :class => 'col-md-offset-1 btn btn-warning' %>
<%end%>